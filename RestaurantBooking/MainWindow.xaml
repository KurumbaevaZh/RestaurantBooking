<Window x:Class="RestaurantBooking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantBooking"
        mc:Ignorable="d"
        Title="BookATable" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Логинь" Margin="10"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <TextBlock Text="Пароль" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Margin="10"/>
            <Button Content="Вход" Click="LoginButton_Click" Margin="10"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

